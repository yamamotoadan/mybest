            <% end %>
            <br>
            <p>いいね履歴</p>
        </div>

        <div class="item">
            <%= link_to tweets_path, class: "btn btn btn-secondary text-white", method: :get do %>
                <i class="fa-solid fa-rotate-left" style="color: #0000ff;"></i>
            <% end %>
            <br>
            <p>トップページに戻る</p>
        </div>
    </div>
