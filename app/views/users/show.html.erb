        <p>ひとこと: <%= @user.profile %></p>
    </div>
    
    <div class="hennsyuuroguoutiine">
        <% if current_user.id == @user.id %>
            <div class="item">
                <%= link_to edit_user_registration_path, class: "btn btn btn-secondary text-white", method: :get do %>
